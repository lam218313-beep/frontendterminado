# =============================================================================
# Dockerfile.api - FastAPI Server with Auto-Init
# =============================================================================
# Imagen optimizada para FastAPI con inicializaci칩n autom치tica de BD
# =============================================================================

FROM python:3.11-slim

WORKDIR /app

# Instalar dependencias del sistema (incluye postgresql-client para pg_isready)
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    libpq-dev \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Copiar requirements
COPY requirements.txt .

# Instalar dependencias Python
RUN pip install --no-cache-dir -r requirements.txt

# Copiar c칩digo de la aplicaci칩n
COPY api/ /app/api/
COPY orchestrator/ /app/orchestrator/
COPY alembic/ /app/alembic/
COPY alembic.ini /app/alembic.ini
COPY init_db.py /app/init_db.py
COPY entrypoint.sh /app/entrypoint.sh

# Make entrypoint executable
RUN chmod +x /app/entrypoint.sh

# Exponer puerto
EXPOSE 8000

# Usar entrypoint que inicializa BD y luego ejecuta API
CMD ["/app/entrypoint.sh"]
